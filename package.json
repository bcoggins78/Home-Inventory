{
  "name": "home-inventory",
  "version": "1.0.0",
  "description": "App to keep track of all belongings",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcoggins78/Home-Inventory.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bcoggins78/Home-Inventory/issues"
  },
  "homepage": "https://github.com/bcoggins78/Home-Inventory#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "concurrently": "^4.1.2",
    "express": "^4.18.2",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.8"
  },
  "devDependencies": {
    "nodemon": "1.19.1",
    "morgan": "^1.9.1"
  }
}
